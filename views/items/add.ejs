<!doctype html>
<html lang="en">
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Add Items</title>
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<body class="container" style="margin-top: 50px;">

	<% if (messages.error) { %>
	<div class="alert alert-danger" role="alert"><%- messages.error %></div>
	<% } %>

    <div class="card">
    	<div class="card-header">
			Add Items
		</div>
        <div class="card-body">
            <form action="/items/add" method="post">
							<div class="form-group">
									<label>Item ID:</label>
									<input type="text" class="form-control" name="itemid" value="<%= itemid %>" autocomplete="off">
							</div>
                <div class="form-group">
                    <label>Item Name:</label>
                    <input type="text" class="form-control" name="itemname" value="<%= itemname %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <label>Stock:</label>
                    <input type="text" class="form-control" name="stock" value="<%= stock %>" autocomplete="off">
                </div>
								<div class="form-group">
                    <label>Category:</label>
                    <input type="text" class="form-control" name="category" value="<%= category %>" autocomplete="off">
                </div>
								<div class="form-group">
                    <label>Cost price:</label>
                    <input type="text" class="form-control" name="costprice" value="<%= costprice %>" autocomplete="off">
                </div>
								<div class="form-group">
                    <label>Selling Price:</label>
                    <input type="text" class="form-control" name="sellingprice" value="<%= sellingprice %>" autocomplete="off">
                </div>
								<div class="form-group">
                    <label>Selling Price With GST:</label>
                    <input type="text" class="form-control" name="sellingpricegst" value="<%= sellingpricegst %>" autocomplete="off">
                </div>
								<div class="form-group">
                    <label>GST:</label>
                    <input type="text" class="form-control" name="gst" value="<%= gst %>" autocomplete="off">
                </div>
                <div class="form-group">
                    <input type="submit" class="btn btn-info" value="Add"/>
                </div>
            </form>
        </div>
    </div>

</body>
</html>
